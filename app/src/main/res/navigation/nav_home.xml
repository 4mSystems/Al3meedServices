<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  app:startDestination="@id/home_fragment">

  <fragment
    android:id="@+id/home_fragment"
    android:name="app.te.lima_zola.presentation.home.HomeFragment"
    android:label="@string/childern"
    tools:layout="@layout/fragment_home">

  </fragment>

  <fragment
    android:id="@+id/mother_fragment"
    android:name="app.te.lima_zola.presentation.home.MomFragment"
    android:label="@string/childern"
    tools:layout="@layout/fragment_home">

  </fragment>


  <fragment
    android:id="@+id/suggestions_fragment"
    android:name="app.te.lima_zola.presentation.suggestions.SuggestionsFragment"
    android:label="@string/suggest"
    tools:layout="@layout/fragment_suggestions" />
  <fragment
    android:id="@+id/contact_fragment"
    android:name="app.te.lima_zola.presentation.contactus.ContactUsFragment"
    android:label="@string/contact_us"
    tools:layout="@layout/fragment_contact_us" />
  <fragment
    android:id="@+id/agents_fragment"
    android:name="app.te.lima_zola.presentation.agents.AgentsFragment"
    android:label="@string/agents"
    tools:layout="@layout/fragment_agents" />
  <fragment
    android:id="@+id/accountFragment"
    android:name="app.te.lima_zola.presentation.account.AccountFragment"
    tools:layout="@layout/fragment_account" />

  <fragment
    android:id="@+id/moreFragment"
    android:name="app.te.lima_zola.presentation.more.MoreFragment"
    tools:layout="@layout/fragment_more">
    <action
      android:id="@+id/action_moreFragment_to_aboutFekraFragment"
      app:destination="@id/aboutFekraFragment"
      app:enterAnim="@anim/anim_slide_in_right"
      app:exitAnim="@anim/anim_slide_out_left"
      app:popEnterAnim="@anim/anim_slide_in_left"
      app:popExitAnim="@anim/anim_slide_out_right" />
    <action
      android:id="@+id/action_moreFragment_to_aboutFragment"
      app:destination="@id/aboutFragment"
      app:enterAnim="@anim/anim_slide_in_right"
      app:exitAnim="@anim/anim_slide_out_left"
      app:popEnterAnim="@anim/anim_slide_in_left"
      app:popExitAnim="@anim/anim_slide_out_right" />
    <action
      android:id="@+id/action_moreFragment_to_termsFragment"
      app:destination="@id/termsFragment"
      app:enterAnim="@anim/anim_slide_in_right"
      app:exitAnim="@anim/anim_slide_out_left"
      app:popEnterAnim="@anim/anim_slide_in_left"
      app:popExitAnim="@anim/anim_slide_out_right" />
    <action
      android:id="@+id/action_moreFragment_to_privacyFragment"
      app:destination="@id/privacyFragment"
      app:enterAnim="@anim/anim_slide_in_right"
      app:exitAnim="@anim/anim_slide_out_left"
      app:popEnterAnim="@anim/anim_slide_in_left"
      app:popExitAnim="@anim/anim_slide_out_right" />
  </fragment>

  <fragment
    android:id="@+id/aboutFragment"
    android:name="app.te.lima_zola.presentation.settings.AboutFragment"
    tools:layout="@layout/fragment_about" />

  <fragment
    android:id="@+id/aboutFekraFragment"
    android:name="app.te.lima_zola.presentation.settings.AboutFekraFragment"
    tools:layout="@layout/fragment_about_fekra" />
  <fragment
    android:id="@+id/termsFragment"
    android:name="app.te.lima_zola.presentation.settings.TermsFragment"
    tools:layout="@layout/fragment_terms" />
  <fragment
    android:id="@+id/privacyFragment"
    android:name="app.te.lima_zola.presentation.settings.PrivacyFragment"
    tools:layout="@layout/fragment_privacy" />

</navigation>
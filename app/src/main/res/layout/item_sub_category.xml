<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

    <variable
      name="uiState"
      type="app.te.lima_zola.presentation.videos.ui_state.SubCategoryItemUiState" />

    <variable
      name="eventListener"
      type="app.te.lima_zola.presentation.base.events.BaseContentEventListener" />

  </data>


  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    android:onClick="@{()-> eventListener.changeSubCategoryItem(uiState.id,uiState.itemPosition)}">

    <com.google.android.material.imageview.ShapeableImageView
      android:id="@+id/cat_image"
      android:layout_width="@dimen/_70sdp"
      android:layout_height="@dimen/_70sdp"
      android:padding="@dimen/_4sdp"
      android:scaleType="centerCrop"
      android:src="@color/overlayBackground"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:loadImage="@{uiState.image}"
      app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
      app:stroke_color="@{uiState.strokeColor}" />

    <androidx.appcompat.widget.AppCompatTextView
      style="@style/TextMediumFont"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/_3sdp"
      android:text="@{uiState.name()}"
      android:textAlignment="center"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      android:textColor="@color/black"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/cat_image" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>